<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="craft_curent" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="javax.persistence.jdbc.driver" value="org.firebirdsql.jdbc.FBDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:firebirdsql:localhost/3050:sprinter_curent"/>
            <property name="javax.persistence.jdbc.user" value="SYSDBA" />
            <property name="javax.persistence.jdbc.password" value="sysadmin" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.FirebirdDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="encoding" value="Cp1251" />
           
        </properties>
    </persistence-unit>
</persistence>